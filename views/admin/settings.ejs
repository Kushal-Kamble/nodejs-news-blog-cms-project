<div id="admin-content">
      <div class="container">
          <div class="row">
              <div class="col-md-12">
                <h1 class="admin-heading"><i class="fa fa-cog"></i> Settings</h1>
              </div>
              <div class="col-md-6 mx-auto">
                  <div class="card">
                    <h5 class="card-header">Settings</h5>
                    <div class="card-body">
                      <form action="/admin/save-settings" method="POST" enctype="multipart/form-data">
                        <!-- submit krne ke baad saara data /admin/save-settings pe jayega -->
                          <div class="mb-3">
                              <label for="website_title" class="form-label">Website Title</label>
                              <!-- agar settings me website_title nahi hai ya empty hai to blank input dikhana -->
                               <!-- TRIM se whitespace remove hota hai left and right site se -->
                                <!-- ky esme koi website title me value hai aur sath me hi mujhe check krna hai khi khali to nhi hai -->
                              <% if(!settings.website_title || settings.website_title.trim() === '') { %> 
                              <input type="text" name="website_title" class="form-control" autocomplete="off" required="">
                              <% }else{ %>
                                <input type="text" value="<%= settings.website_title %>" name="website_title" class="form-control" autocomplete="off" required="">
                              <% } %> 
                          </div>
                          <div class="mb-3">
                              <label for="website_logo" class="form-label">Upload Logo</label>
                              <br>
                              <!-- ky esme koi website logo me value hai aur sath me hi mujhe check krn ahai khi khali to nhi hai -->
                              <% if(settings.website_logo && settings.website_logo.trim() !== '') { %>
                                <img src="/uploads/<%= settings.website_logo %>" class="w-25 mb-3">
                              <% } %>     
                              <input type="file" name="website_logo" class="form-control">
                          </div>
                          <div class="mb-3">
                              <label for="footer_description" class="form-label">Footer Description</label>
                              <!-- ky esme koi footer description me value hai aur sath me hi mujhe check krn ahai khi khali to nhi hai -->
                              <% if(!settings.footer_description || settings.footer_description.trim() === '') { %> 
                                <input type="text" name="footer_description" class="form-control" autocomplete="off" required="">
                              <% }else{ %>
                                <input type="text" value="<%= settings.footer_description %>" name="footer_description" class="form-control" autocomplete="off" required="">
                              <% } %> 
                          </div>
                          
                          <input type="submit" name="submit" class="btn btn-primary" value="Save" required="">
                      </form>
                    </div>
                  </div>
              </div>
          </div>
      </div>
  </div>